{
  "name": "Gyazo-Extension",
  "version": "2.8.2",
  "dependencies": {
    "bowser": "^1.3.0",
    "chrome-browser-object-polyfill": "^0.2.2",
    "delegate": "^3.0.0",
    "dom-css": "^2.0.0",
    "then-chrome": "^1.0.6",
    "xtend": "^4.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "^7.0.0",
    "ava": "^0.19.1",
    "babel-loader": "^8.0.0",
    "browser-env": "^2.0.30",
    "browserify": "^14.3.0",
    "chrome-webstore-manager": "^0.4.1",
    "copy-webpack-plugin": "^4.0.1",
    "crx": "^3.2.1",
    "jsdom": "^9.12.0",
    "manifoldjs": "^0.7.5",
    "npm-run-all": "^4.0.2",
    "on-build-webpack": "^0.1.0",
    "request-promise": "^4.2.0",
    "sinon": "^2.1.0",
    "sinon-chrome": "^2.2.0",
    "standard": "^10.0.2",
    "uglifyjs-webpack-plugin": "^1.1.0",
    "web-ext": "^3.0.0",
    "webpack": "^2.4.1",
    "wemf": "^1.2.0"
  },
  "scripts": {
    "test": "yarn run build > /dev/null && run-p test:**",
    "test:lint": "standard \"./**/*.js\"",
    "test:ava": "BABEL_ENV=test ava --verbose",
    "test:lint:package:firefox": "web-ext lint -s dist/personal/firefox && web-ext lint -s dist/teams/firefox",
    "clean": "rm -rf dist/{personal,teams}/{chrome,firefox,common,edge}/* build/{personal,teams}/*",
    "build": "run-p build:*",
    "watch": "run-p watch:*",
    "watch:personal": "yarn build:personal -- --watch",
    "watch:teams": "yarn build:teams -- --watch",
    "build:personal": "BUILD_EXTENSION_TYPE=personal webpack --config webpack.config.js",
    "build:teams": "BUILD_EXTENSION_TYPE=teams webpack --config webpack.config.js",
    "pack": "npm-run-all clean build pack-personal pack-teams",
    "pack-personal": "BUILD_EXTENSION_TYPE=personal npm-run-all build:personal pack:*",
    "pack-teams": "BUILD_EXTENSION_TYPE=teams npm-run-all build:teams pack:*",
    "pack:chrome": "run-s pack:chrome:keygen pack:chrome:zip",
    "pack:chrome:zip": "crx pack -p build/$BUILD_EXTENSION_TYPE/key.pem -o build/$BUILD_EXTENSION_TYPE/gyazo.crx --zip-output build/$BUILD_EXTENSION_TYPE/gyazo.chrome.zip dist/$BUILD_EXTENSION_TYPE/chrome",
    "pack:chrome:keygen": "if [ ! -f build/$BUILD_EXTENSION_TYPE/key.pem ] ; then crx keygen ./build/$BUILD_EXTENSION_TYPE ; fi",
    "pack:firefox": "web-ext build -s dist/$BUILD_EXTENSION_TYPE/firefox -a build/$BUILD_EXTENSION_TYPE",
    "pack:msedge": "if [ ! -z $MS_PACKAGE_ID ] ; then run-s pack:msedge:prepare pack:msedge:generate pack:msedge:finalize ; fi",
    "pack:msedge:prepare": "run-s pack:msedge:gen-manifest pack:msedge:replace-manifest pack:msedge:replace-icons",
    "pack:msedge:gen-manifest": "rm -rf build/$BUILD_EXTENSION_TYPE/Gyazo && manifoldjs -l debug -p edgeextension -f edgeextension -m dist/$BUILD_EXTENSION_TYPE/edge/manifest.json && mv Gyazo build/$BUILD_EXTENSION_TYPE",
    "pack:msedge:replace-manifest": "run-s pack:msedge:replace-manifest:*",
    "pack:msedge:replace-manifest:01": "sed -i -e \"s|INSERT-YOUR-PACKAGE-IDENTITY-NAME-HERE|$MS_PACKAGE_ID|\" build/$BUILD_EXTENSION_TYPE/Gyazo/edgeextension/manifest/appxmanifest.xml",
    "pack:msedge:replace-manifest:02": "sed -i -e \"s|INSERT-YOUR-PACKAGE-IDENTITY-PUBLISHER-HERE|$MS_PUBLISHER_IDENTITY|\" build/$BUILD_EXTENSION_TYPE/Gyazo/edgeextension/manifest/appxmanifest.xml",
    "pack:msedge:replace-manifest:03": "sed -i -e \"s|INSERT-YOUR-PACKAGE-PROPERTIES-PUBLISHERDISPLAYNAME-HERE|$MS_PUBLISHER_DNAME|\" build/$BUILD_EXTENSION_TYPE/Gyazo/edgeextension/manifest/appxmanifest.xml",
    "pack:msedge:replace-icons": "run-s pack:msedge:replace-icons:*",
    "pack:msedge:replace-icons:01": "cp src/icons/$BUILD_EXTENSION_TYPE/44.png build/$BUILD_EXTENSION_TYPE/Gyazo/edgeextension/manifest/Assets/Square44x44Logo.png",
    "pack:msedge:replace-icons:02": "cp src/icons/$BUILD_EXTENSION_TYPE/150.png build/$BUILD_EXTENSION_TYPE/Gyazo/edgeextension/manifest/Assets/Square150x150Logo.png",
    "pack:msedge:replace-icons:03": "cp src/icons/$BUILD_EXTENSION_TYPE/50.png build/$BUILD_EXTENSION_TYPE/Gyazo/edgeextension/manifest/Assets/StoreLogo.png",
    "pack:msedge:generate": "manifoldjs -l debug -p edgeextension package build/$BUILD_EXTENSION_TYPE/Gyazo/edgeextension/manifest",
    "pack:msedge:finalize": "mv build/$BUILD_EXTENSION_TYPE/Gyazo/edgeextension/package/edgeExtension.appx build/$BUILD_EXTENSION_TYPE"
  },
  "standard": {
    "global": [
      "chrome",
      "saveToClipboard",
      "canvasUtils",
      "location",
      "window",
      "document",
      "screen",
      "Image",
      "$",
      "jQuery",
      "FileReader",
      "MouseEvent",
      "KeyboardEvent"
    ]
  },
  "ava": {
    "require": [
      "@babel/register",
      "@babel/polyfill",
      "./test/helpers/browserEnv.js",
      "./test/helpers/chromeMock.js"
    ],
    "babel": "inherit"
  },
  "repository": "https://github.com/gyazo/gyazo-browser-extension.git",
  "author": "NOTA Inc <contact@gyazo.com>",
  "license": "MIT"
}
